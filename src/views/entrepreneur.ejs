<!DOCTYPE html>
<html lang="en">
  <meta charset="UTF-8" />
  <title>Founder Hub</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="./style/style.css" />
  <body>
    <%- include('./partials/header') %>
    <div id="table-container">
      <table>
        <caption>Entrepreneur Directory</caption>
        <thead>
          <th scope="col">Name</th>
          <th scope="col">Net Worth(USD Billion)</th>
          <th scope="col">Nationality</th>
          <th scope="col">Date of Birth</th>
        </thead>
        <tbody>
            <% rows.forEach(row => { %>
            <tr>
              <th scope="row">
                <%= row.name %>
              </th>
              <td>
                <%= row.net_worth %>
              </td>
              <td>
                <%= row.nationality%>
              </td>
              <td>
                <%= row.date_of_birth %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
