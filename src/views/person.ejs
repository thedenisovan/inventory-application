<!DOCTYPE html>
<html lang="en">
  <meta charset="UTF-8" />
  <title>Founder Hub</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="/style/style.css" />
  <body>
    <%- include('./partials/header') %>
    <div id="table-container">
      <table>
        <caption>Entrepreneur Information</caption>
        <thead>
          <th scope="col">Name</th>
          <th scope="col">Business</th>
          <th scope="col">role</th>
          <th scope="col">Nationality</th>
          <th scope="col">Date of Birth</th>
          <th scope="col">Net Worth(USD Billion)</th>
          <th scope="col">Action</th>
        </thead>
        <tbody>
            <% rows.forEach(row => { %>
            <tr class="person-row">
              <th scope="row">
                <%= row.name %>
              </th>
              <th >
                <%= row.business_name %>
              </th>
              <td>
                <%= row.role %>
              </td>
              <td>
                <%= row.nationality%>
              </td>
              <td>
                <%= row.date_of_birth %>
              </td>
              <td>
                <%= row.net_worth %>
              </td>
              <td>
                <button class="edit-btn">Edit</button>
                <form action="<%= id %>/delete" method="post">
                  <button type="submit" class="delete-btn" onclick="hi()">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
  <script>
    import 'dotenv/config';
    
    function hi() {
      const promptReturn = prompt('Please enter password to delete his row.');

      if (promptReturn === process.env.PASSWORD) {
        alert('You have deleted this row.')
      } else {
        alert('Wrong password.')
      }
    }

  </script>
</html>
